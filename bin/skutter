#! /usr/bin/env python3

import argparse
import os
import logging
import sys

log = logging.getLogger(__name__)

try:
    from skutter import Skutterd
except ImportError:
    #log.critical('Unsafely configuring PYTHONPATH for development use')
    #log.critical('If you see this message in production, do not use the service and notify the developers')
    #log.critical('PYTHONPATH before modification was: %s', sys.path)

    from pathlib import Path

    scriptdir = os.path.dirname(os.path.realpath(__file__))

    sys.path.append(str(Path(scriptdir, '..').resolve()))

    #log.critical('PYTHONPATH after modification was: %s', sys.path)

    from skutter import Skutterd

if __name__ == '__main__':
    log.info('Skutterd starting up')
    Skutterd.run()
